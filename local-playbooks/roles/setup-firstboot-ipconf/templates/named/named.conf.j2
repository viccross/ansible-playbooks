//
// named.conf
//
// Provided by Red Hat bind package to configure the ISC BIND named(8) DNS
// server as a caching only nameserver (as a localhost DNS resolver only).
//
// See /usr/share/doc/bind*/sample/ for example named configuration files.
//

// NOTE NOTE NOTE NOTE NOTE NOTE NOTE NOTE NOTE
// For FastVM:
// Do not alter ths file on the source location WITHOUT ALSO updating
// the Ansible scripting AND the /etc/named.conf.source file!
// This file may be replaced at run-time at a client location!
// NOTE NOTE NOTE NOTE NOTE NOTE NOTE NOTE NOTE

acl internal_nets { {{ subnet_cidr }}; };

options {
	listen-on port 53 { 127.0.0.1; {{ bastion_private_ip_address }};};
	listen-on-v6 port 53 { none; };
	directory 	"/var/named";
	dump-file 	"/var/named/data/cache_dump.db";
	statistics-file "/var/named/data/named_stats.txt";
	memstatistics-file "/var/named/data/named_mem_stats.txt";
	secroots-file	"/var/named/data/named.secroots";
	recursing-file	"/var/named/data/named.recursing";
	allow-query     { localhost; internal_nets; };

	recursion yes;
	allow-recursion { localhost; internal_nets; };
	forwarders { {{ dns_nameserver }}; };

	dnssec-enable yes;
	dnssec-validation no;

	managed-keys-directory "/var/named/dynamic";

	pid-file "/run/named/named.pid";
	session-keyfile "/run/named/session.key";

	/* https://fedoraproject.org/wiki/Changes/CryptoPolicy */
	include "/etc/crypto-policies/back-ends/bind.config";
};

logging {
        channel default_debug {
                file "data/named.run";
                severity dynamic;
        };
};

zone "." IN {
	type hint;
	file "named.ca";
};

include "/etc/named.rfc1912.zones";
include "/etc/named.root.key";

zone "{{ cluster_domain_name }}" {
	type master;
	file "{{ cluster_domain_name }}.zone";
	allow-query { any; };
	allow-transfer { none; };
	update-policy local;
};

zone "{{ subnet_in_addr_name }}.in-addr.arpa" {
	type master;
	file "{{ subnet_in_addr_name }}.in-addr.arpa.zone";
	allow-query { any; };
	allow-transfer { none; };
	update-policy local;
};

zone "ibmpoc.internal" {
	type master;
	file "ibmpoc_internal.zone";
	allow-query { any; };
	allow-transfer { none; };
	update-policy local;
};

